{
  "name": "@stefanprobst/remark-mdx-page",
  "version": "3.0.0",
  "main": "src/index.js",
  "type": "module",
  "types": "src/index.d.ts",
  "repository": "https://github.com/stefanprobst/remark-mdx-page.git",
  "license": "MIT",
  "exports": {
    "types": "./src/index.d.ts",
    "import": "./src/index.js"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "format": "prettier . --list-different --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "yarn run lint --fix",
    "prepare": "simple-git-hooks || true",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest",
    "validate": "yarn run format && yarn run lint && yarn run test"
  },
  "engines": {
    "node": ">=14.17",
    "yarn": "1.x"
  },
  "dependencies": {
    "acorn": "^8.5.0",
    "acorn-jsx": "^5.3.2",
    "esbuild": "^0.13.13"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@commitlint/cli": "^14.1.0",
    "@jest/types": "^27.2.5",
    "@mdx-js/loader": "^2.0.0-rc.1",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/eslint-config-node": "^3.0.0",
    "@stefanprobst/prettier-config": "^2.0.0",
    "@types/react": "^17.0.34",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "lint-staged": "^12.0.2",
    "memfs": "^3.3.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.5.1-rc",
    "unified": "^10.1.0",
    "webpack": "^5.64.0"
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@stefanprobst/eslint-config-node",
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "ignorePatterns": [
      "*.d.ts",
      "test/__fixtures__"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
